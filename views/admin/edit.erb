<h3>Edit</h3>

<form	action="/update" method="post" id="day" enctype="multipart/form-data">
	<p>
		<label>Blog ID:</label><br />
		<input type="text" name="day[id]" id="id" value="<%= @day.id %>" />	
	</p>
	<p>
		<label>Name:</label><br />
		<input type="text" name="day[name]" id="blog" value="<%= @day.name %>"/>
	</p>
	<p>
		<label>Is Active?:</label><br />
		<input type="text" name="day[is_active]" id="blogger" value="<%= @day.is_active %>"/>
	</p>
	<p>
		<label>Promo Code:</label><br />
		<input type="text" name="day[promo_code]" id="title" value="<%= @day.promo_code %>"/>
	</p>
	<input type="hidden" name="id" value="<%= @day.id %>">
	<p>
		<input type="submit">
	</p>
</form>
