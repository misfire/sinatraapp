<div class="container">

<h2>Admin</h3>

<h3>Days</h3>

<table class="table" border="0" cellpartding="0" cellspacing="10" class="list">
<% @groups.each_with_index do |group,i| %>
	<tr<%= ' class="alt"' if i%2==0 %>>
	  <td><a href="/admin/day/show/<%= group.id %>"><%= group.name %></a></td>
	  <td><span class="label">Is Active?:</span></span><%= group.is_active %></span>
	  <td><a href="/admin/day/edit/<%= group.id %>">edit</a></td>
	  <td><a href="/admin/day/delete/<%= group.id %>">delete</a></td>
	</tr>	
<% end %>
</table>

</div>
