<table border="0" cellpartding="0" cellspacing="10" class="list">
<% @groups.each_with_index do |group,i| %>
	<tr<%= ' class="alt"' if i%2==0 %>>
	  <td><img src="/arts/<%= group.filename %>" /></td>
	  <td><a href="/show/<%= group.id %>"><%= group.title %></a></td>
	  <td><span class="label">Votes:</span></span><%= group.votes.count %></span>
	  <td><a href="/edit/<%= art.id %>">edit</a></td>
	  <td><a href="/delete/<%= art.id %>">delete</a></td>
	</tr>	
<% end %>
</table>
