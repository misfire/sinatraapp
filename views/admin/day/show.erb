<div class="container"><p>
  <b>Day ID:</b>
  <%= @day.id %>
</p>
<p>
  <b>Name:</b>
  <%= @day.name %>
</p>
<p>
  <b>Active:</b>
  <%= @day.is_active %>
</p>
<p>
  <b>Promo Code:</b>
  <%= @day.promo_code %>
</p>

<a class="btn" href="/admin/day/products/new/<%= @day.id %>">Create New Product</a>
<a class="btn" href="/admin/day/promotions/new/<%= @day.id %>">Create New Promotion</a>


<table class="table" border="0" cellpartding="0" cellspacing="10" class="list">
	<h2>Products</h2>
	<tr>
	<th style="width:15%">Product</th>
	<th>Description</th>
	<th>Picture</th>
	<th>Actions</th>
	<th>Votes</th>
	<th>Debug</th>
	</tr>
<% @day.products.each_with_index do |group,i| %>
<div id="<%= group.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="windowTitleLabel" aria-hidden="true">
				<div class="modal-header">
					<a href="#" class="close" data-dismiss="modal">&times;</a>
					<h3>Product</h3>
					</div>
				<div class="modal-body">
					<div class="divDialogElements">
					 	<%= group.description %>
	  					<%= group.picture %>
						<input class="xlarge" id="xlInput" name="xlInput" type="text" />
						</div>
					</div>
				<div class="modal-footer">
					<a href="#" class="btn" onclick="closeDialog ();">Cancel</a>
					<a href="#" class="btn btn-primary" onclick="okClicked ();">OK</a>
					</div>
				</div>
	<div class="divButtons">
				<a data-toggle="modal" href="#<%= group.id %>" class="btn btn-primary btn-large">Set Window Title</a>
				</div>
	<tr<%= ' class="alt"' if i%2==0 %>>
	  <td><a href="/admin/day/products/show/<%= @day.id %>/<%= group.id %>"><%= group.productname %></a></td>
	  <td><%= group.description %></td>
	  	<td><%= group.picture %></td>
	  <td><a class="btn" href="/admin/day/products/edit/<%= @day.id %>/<%= group.id %>">Edit</a><a onclick="return confirm('Are you sure you want to delete?');" class="btn btn-danger" href="/admin/day/products/delete/<%= @day.id %>/<%= group.id %>">Delete</a></td>
	  <td><a href="/admin/day/votes/show/<%= @day.id %>/<%= group.id %>"><%= group.votes.count %></a></td>
	  <td><a href="/admin/day/products/vote/<%= @day.id %>/<%= group.id %>">Vote This!</a></td>
	</tr>	
<% end %>
</table>


<table class="table" border="0" cellpartding="0" cellspacing="10" class="list">
	<h2>Promotions</h2>
	<tr>
		<th style="width:15%">Promotion</th>
		<th style="width:15%">Description</th>
		<th style="width:15%">Picture</th>
		<th style="width:15%">Actions</th>
	</tr>		
<% @day.promotions.each_with_index do |group,i| %>
	<tr<%= ' class="alt"' if i%2==0 %>>
	  <td><a href="/admin/day/promotions/show/<%= @day.id %>/<%= group.id %>"><%= group.productname %></a></td>
	  <td><%= group.description %></td>		
	  	<td><%= group.picture %></td>
	  <td><a class="btn" href="/admin/day/promotions/edit/<%= @day.id %>/<%= group.id %>">Edit</a><a onclick="return confirm('Are you sure you want to delete?');" class="btn btn-danger" href="/admin/day/promotions/delete/<%= @day.id %>/<%= group.id %>">Delete</a></td>
	</tr>	
<% end %>
</table>

</div>

<script>
			$(document).ready(function() {
				$('#windowTitleDialog').bind('show', function () {
					document.getElementById ("xlInput").value = document.title;
					});
				});
			function closeDialog () {
				$('.modal').modal('hide'); 
				};
			function okClicked () {
				closeDialog ();
				};
 
</script>
